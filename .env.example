# Copy this file to .env.local for local development
# DO NOT commit .env.local to git

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=https://app.bottlecode.app

# Email Configuration
CONTACT_EMAIL_TO=contact@bottlecode.app
CONTACT_EMAIL_FROM=noreply@bottlecode.app

# SMTP Configuration for nodemailer
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=noreply@bottlecode.app
SMTP_PASS=your_app_password_here

# Yandex Tracker Integration (for contact form)
TRACKER_PRIVATE_KEY=your_private_key_here
TRACKER_KEY_ID=your_key_id_here
TRACKER_SERVICE_ACCOUNT_ID=your_service_account_id_here
TRACKER_ORG_ID=your_organization_id_here
TRACKER_QUEUE_KEY=your_queue_key_here

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_YANDEX_METRICA_ID=XXXXXXXX
